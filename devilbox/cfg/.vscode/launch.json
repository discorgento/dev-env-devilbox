{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for XDebug",
        "type": "php",
        "request": "launch",
        "port": 9000,
        "pathMappings": {
          "/shared/httpd/yeesco-old": "${workspaceFolder}"
        },
        "log": true,
        "xdebugSettings": {
          "max_children": 128,
          "max_data": 512,
          "max_depth": 3
        }
      },
      {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "port": 9000
      }
    ]
  }
